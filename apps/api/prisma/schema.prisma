// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int           @id @default(autoincrement())
  username      String        @unique
  email         String        @unique
  password      String
  referalnumber String        @unique @default(uuid())
  referalcode   String        @default("")
  point         Int           @default(0)
  avatar        String?
  role          role          @default(user)
  phonenumber   String?       @db.VarChar(15)
  isVerify      Boolean       @default(false)
  createdAd     DateTime      @default(now())
  Point         Point?
  Transaction   Transaction[]
  Review        Review?
}

model Point {
  id        Int      @id @default(autoincrement())
  point     Int      @default(0)
  userId    Int      @unique
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}

enum statusTransaction {
  pending
  waitingtocomfirm
  paid
  declined
}

model Transaction {
  id            Int               @id @default(autoincrement())
  quantitiy     Int               @default(1)
  price         Int               @default(0)
  totaldiscount Int               @default(0)
  finalprice    Int               @default(0)
  status        statusTransaction @default(pending)
  paymentlink   String
  proofpayment  String
  createdAd     DateTime          @default(now())
  updatedAd     DateTime          @updatedAt
  userId        Int
  eventId       Int
  user          User              @relation(fields: [userId], references: [id])
  event         Event             @relation(fields: [eventId], references: [id])
}

model Review {
  id      Int    @id @default(autoincrement())
  review  String
  rating  Int    @default(0)
  userId  Int    @unique
  eventId Int    @unique
  user    User   @relation(fields: [userId], references: [id])
  event   Event  @relation(fields: [eventId], references: [id])
}

enum tickettype {
  free
  paid
}

enum category {
  game
  music
  film
}

model Event {
  id               Int            @id @default(autoincrement())
  name             String         @unique
  description      String         @default("")
  price            Int            @default(0)
  date             DateTime
  location         String         @default("")
  seat             Int            @default(0)
  tickettype       tickettype
  image            String?
  eventOrganizerId Int
  eventorganizer   EventOrganizer @relation(fields: [eventOrganizerId], references: [id])
  category         category
  Promotion        Promotion?
  Review           Review[]
  Transaction      Transaction[]
}

model Promotion {
  id         Int      @id @default(autoincrement())
  startdate  DateTime
  enddate    DateTime
  quota      Int
  percentage Int
  event      Event    @relation(fields: [eventId], references: [id])
  eventId    Int      @unique
}

enum role {
  user
  eventorganizer
}

model EventOrganizer {
  id          Int      @id @default(autoincrement())
  username    String   @unique
  email       String   @unique
  password    String
  avatar      String?
  role        role     @default(eventorganizer)
  phonenumber String?  @db.VarChar(15)
  isVerify    Boolean  @default(false)
  createdAd   DateTime @default(now())
  event       Event[]
}

